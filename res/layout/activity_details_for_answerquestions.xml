<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gainsboro"
     >
    
     <TextView
        android:id="@+id/detailAnswerQuestionsTV"
        android:layout_height="60dp"
        android:layout_width="match_parent"
        android:text="@string/details_for_answer"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:textColor="@color/white"
        android:background="#3366CC"
        android:gravity="center"/>
     
    <RelativeLayout
        android:background="@color/white" 
        android:layout_below="@id/detailAnswerQuestionsTV"
        android:id="@+id/detailAnswerQuestionsDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        
        <TextView 
            android:id="@+id/detailAnswerQuestionTitle"
            android:layout_alignParentTop="true"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="题目描述测试"/>
        <ImageView 
            android:id="@+id/detailAnswerQuestionsPic"
            android:layout_below="@id/detailAnswerQuestionTitle"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"           
            android:layout_alignParentTop="true"
            android:layout_height="100dp"
            android:layout_width="wrap_content"/>
       
        <TextView 
            android:id="@+id/detailAnswerQuestionsScore"
            android:layout_below="@id/detailAnswerQuestionsPic"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:layout_width="wrap_content"/>
         <TextView 
            android:id="@+id/detailAnswerQuestionsScoreHint"
            android:layout_below="@id/detailAnswerQuestionsPic"
            android:layout_toLeftOf="@id/detailAnswerQuestionsScore"
            android:layout_height="wrap_content"
            android:text="@string/score_text"
            android:textColor="@color/red"
            android:layout_width="wrap_content"/>
                
    </RelativeLayout>
    
    
   
    <ImageView
        android:id="@+id/detailAnswerQuestionsAddPicture"
        android:background="@drawable/camera"
      	android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_width="45dp"
        android:layout_height="45dp"/>
    
    <EditText 
        android:id="@+id/detailAnswerQuestionsEdit"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/detailAnswerQuestionsAddPicture"
        android:layout_width="200dp"
        android:layout_height="60dp"
        />
    
    
        
    <Button
       	android:id="@+id/detailAnswerQuestionsSubmit"
        android:layout_toRightOf="@id/detailAnswerQuestionsEdit"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/deepskyblue"
        android:layout_alignParentRight="true"
        android:text="@string/answer"/>
    
  </RelativeLayout>
