<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gainsboro">
    
    <TextView
        android:background="@color/white"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:id="@+id/detailsExperienceTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        
        android:background="@color/white"
        android:id="@+id/detailsExperienceAuthor"
        android:textColor="@color/deepskyblue"
        android:layout_below="@id/detailsExperienceTitle"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    
    <TextView 
        android:background="@color/white"       
        android:id="@+id/detailsExperienceContent"
        android:layout_below="@id/detailsExperienceAuthor"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    
    <ImageView
        android:id="@+id/detailsExperiencePic"     
        android:layout_below="@id/detailsExperienceContent"      
        android:layout_width="wrap_content"
        android:layout_height="100dp"/>
        
    <TextView 
        android:layout_below="@id/detailsExperiencePic"
        android:id="@+id/detailsExperienceDevide"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:text="@string/comment_text"
        android:textSize="15sp"
        android:textColor="@color/deepskyblue"/>
    
    
    <EditText 
        android:layout_marginTop="20dp"
        android:id="@+id/detailsExperienceComment"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:hint="@string/comment_text_hint"
        android:gravity="top"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:background="@color/white"/>
    
    
    <ImageView
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:id="@+id/detailsExperienceLove"
        android:layout_alignParentRight="true"
        android:background="@drawable/love"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        />
 	<Button 
        android:id="@+id/datailExperienceCommentSubmit"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@id/detailsExperienceLove"
        android:layout_toRightOf="@id/detailsExperienceComment"
        android:text="@string/comment_text"
        android:layout_alignParentBottom="true"
        android:background="@color/deepskyblue"
        android:textColor="@color/white"
        android:layout_height="40dp"
        android:layout_width="wrap_content"/>
 	
 	    
 	<ListView
 	    android:background="@color/white"
 	    android:layout_marginBottom="5dp"
        android:layout_below="@id/detailsExperienceDevide"
        android:layout_above="@id/datailExperienceCommentSubmit"
 	    android:id="@android:id/list"
       	android:layout_width="fill_parent"
        android:layout_height="200dp"/>
 	
 	<TextView
        android:layout_below="@id/detailsExperienceDevide"
        android:id="@android:id/empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/empty" />
 	
    
</RelativeLayout>
