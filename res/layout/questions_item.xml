<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gainsboro"
     >
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
    	android:layout_height="60dp"
    	android:background="@color/white">
                 
        <TextView 
            android:id="@+id/questionsUsername"
            android:paddingLeft="5dp"
            android:layout_alignParentLeft="true"
            android:textColor="@color/deepskyblue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
                
  
        <TextView 
            android:layout_below="@id/questionsUsername"
            android:paddingLeft="5dp"
            android:id="@+id/questionsDescribe"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
            
        
        <TextView 
            android:id="@+id/questionsScore"
            android:layout_below="@id/questionsDescribe"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:layout_width="wrap_content"/>
            
        <TextView
            android:layout_toLeftOf="@id/questionsScore"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_below="@id/questionsDescribe"
            android:textColor="@color/red"
            android:text="@string/score_text"/>      
    </RelativeLayout>

</RelativeLayout>
